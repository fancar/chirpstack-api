        "company": {
          "type": "string",
          "title": "the company where the employee is working at"
        },
        "position": {
          "type": "string",
          "title": "user's position and subdivision in the company"
        },
        "phone": {
          "type": "string",
          "title": "user's phone"
        }
      }
